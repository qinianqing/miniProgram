/* page/search/search.wxss */

/* 导航栏  */

.iphonx-blank {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  background: #fff;
}

.c-box-iphonex {
  position: fixed;
  top: 50rpx;
  left: 0;
  width: 100%;
  height: 182rpx;
  background: #fff;
}

.c-box {
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 132rpx;
}

.head {
  width: 750rpx;
  height: 132rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  position: relative;
}

.back {
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 100%;
  z-index: 999;
}

.nav {
  width: 19.6rpx;
  height: 32.7rpx;
  padding: 64rpx 234.9rpx 27.3rpx 41rpx;
}

.head-title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 45rpx;
  padding-top: 59rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #303030;
}

/* 页面  */

.container-box-iphonex {
  width: 100%;
  padding-top: 307rpx;
  background-color: #fff;
  min-height: 100%;
}

.container-box {
  width: 100%;
  padding-top: 257rpx;
  background-color: #fff;
  min-height: 100%;
}

/* 搜索栏  */

.search-bar {
  position: fixed;
  top: 132rpx;
  left: 0;
  padding-left: 35rpx;
  padding-top: 37rpx;
  padding-right: 28rpx;
  padding-bottom: 10rpx;
  background-color: white;
  width: 687rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.search-bar-iphonex {
  position: fixed;
  top: 182rpx;
  left: 0;
  padding-left: 35rpx;
  padding-top: 37rpx;
  padding-right: 28rpx;
  padding-bottom: 10rpx;
  background-color: white;
  width: 687rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.search-box {
  position: relative;
  width: 607rpx;
  height: 72rpx;
  background: rgba(246, 246, 246, 0.69);
  border: 1rpx solid rgba(151, 151, 151, 0.08);
  box-shadow: inset 0 3rpx 4rpx 0 rgba(186, 186, 186, 0.07);
  border-radius: 100rpx;
}

.search-input {
  position: absolute;
  top: 0;
  left: 80rpx;
  width: 485rpx;
  height: 100%;
}

.search-input-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999;
  letter-spacing: 0;
  text-align: left;
}

.search-icon {
  position: absolute;
  top: 21rpx;
  left: 40rpx;
  width: 30rpx;
  height: 30rpx;
}

.close {
  position: absolute;
  top: 23rpx;
  right: 23rpx;
  width: 26rpx;
  height: 26rpx;
  z-index: 99;
}

.cancel {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #ff9080;
  letter-spacing: 0;
  text-align: right;
}

/* 热搜栏  */

.titile-box {
  margin-top: 40rpx;
  padding-left: 35rpx;
  height: 42rpx;
  width: 715rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.title-icon {
  width: 12rpx;
  height: 28rpx;
  background: #ffe67a;
}

.title-name {
  height: 42rpx;
  line-height: 42rpx;
  margin-left: 15rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666;
  letter-spacing: 0;
  text-align: right;
}

.hot-box {
  margin-top: 30rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  width: 680rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.hot {
  height: 67rpx;
  margin-right: 21rpx;
  background: rgba(255, 144, 128, 0.05);
  line-height: 67rpx;
  border: 1rpx solid #ff9080;
  border-radius: 100rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #d1867b;
  letter-spacing: 0;
}

/* 以下搜索历史保留  */

.history {
  margin: 35rpx;
}

.font2 {
  margin-top: 35rpx;
  width: 680rpx;
  height: 2rpx;
  background-color: rgba(235, 235, 235, 1);
}

.xiangyan {
  width: 100%;
  /* height: 100%; */
  height: 40rpx;
  line-height: 40rpx;
}

.tory {
  padding-top: 5rpx;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  /* position: relative;
  top: 0rpx; */
}

.torys {
  float: right;
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 8rpx;
}

.font {
  font-family: PingFangSC-Regular;
  display: inline-block;
  font-size: 28rpx;
  color: rgba(132, 132, 132, 1);
  padding-left: 15rpx;
  position: relative;
  bottom: 5rpx;
}
