/* page/category/index.wxss */

.container-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.iphonx-blank {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  background: #fff;
}

.c-box-iphonex {
  position: fixed;
  top: 50rpx;
  left: 0;
  width: 100%;
  height: 182rpx;
  background: #fff;
}

.c-box {
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 132rpx;
}

.head {
  width: 750rpx;
  height: 132rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  position: relative;
}

.back {
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 100%;
  z-index: 999;
}

.nav {
  width: 19.6rpx;
  height: 32.7rpx;
  padding: 64rpx 234.9rpx 27.3rpx 41rpx;
}

.head-title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 45rpx;
  padding-top: 59rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #303030;
}

/* top tab */

.top_bar-iphonex {
  position: fixed;
  top: 172rpx;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
}

.top_bar {
  position: fixed;
  top: 132rpx;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
}

.search_box {
  margin-top: 26rpx;
  margin-left: 35rpx;
  margin-bottom: 26rpx;
  width: 680rpx;
  height: 58rpx;
  background-color: #f6f6f6;
  border-radius: 100rpx;
  position: relative;
}

.search_icon {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 36rpx;
  top: 17rpx;
}

.search_placeholder {
  position: absolute;
  left: 73rpx;
  top: 14rpx;
  font-size: 22rpx;
  color: #787878;
  letter-spacing: 0;
}

/* category */

.content-iphonex {
  position: fixed;
  top: 283rpx;
  left: 0;
  height: 100%;
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.content {
  position: fixed;
  top: 247rpx;
  left: 0;
  height: 100%;
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.index {
  margin-top: 10rpx;
  width: 200rpx;
  height: 100%;
  background-color: white;
}

.one_level_box {
  height: 120rpx;
  width: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f7f7f7;
}

.lta {
  width: 192rpx;
  height: 100%;
  font-family: PingFangSC-Medium;
  font-weight: 650;
  font-size: 32rpx;
  color: #303030;
  letter-spacing: 0;
  line-height: 120rpx;
  padding-left: 60rpx;
  background-color: #ffe67a;
}

.lt {
  width: 192rpx;
  height: 100%;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #888;
  letter-spacing: 0;
  line-height: 120rpx;
  padding-left: 60rpx;
  background-color: white;
}

.one_level_select_indictor {
  height: 60rpx;
  width: 8rpx;
  background-color: #f86d66;
}

.detail {
  width: 550rpx;
  margin-top: 25rpx;
}

.detail_box {
  padding-bottom: 480rpx;
  padding-left: 34rpx;
  padding-right: 35rpx;
  width: 481rpx;
}

.content_title {
  font-weight: 600;
  font-size: 22rpx;
  color: #686868;
  letter-spacing: 0;
  margin-bottom: 20rpx;
}

.content_box {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.topic-pic {
  width: 480rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  border-radius: 3rpx;
}

.border_box {
  width: 236rpx;
  height: 253rpx;
  margin-left: 3rpx;
  margin-right: 3rpx;
  margin-top: 5rpx;
  position: relative;
}

.border_img {
  width: 230rpx;
  height: 248rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.content_detail_box {
  position: absolute;
  top: 0;
  left: 0;
  width: 230rpx;
  height: 248rpx;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content_detail_pic {
  margin-top: 25rpx;
  width: 150rpx;
  height: 150rpx;
}

.content_detail_title {
  margin-top: 5rpx;
  font-weight: 600;
  font-size: 26rpx;
  color: #696969;
  letter-spacing: 0;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/* brand type */

.brand_pic {
  width: 230rpx;
  height: 96rpx;
  margin-bottom: 15rpx;
}
